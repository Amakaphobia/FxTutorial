<?xml version="1.0" encoding="UTF-8"?>

<?import app.gameScreen.questionPanel.text.PointyBackGround?>
<?import javafx.scene.control.Label?>
<?import java.lang.String?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>

<StackPane 
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="app.gameScreen.questionPanel.text.QuestionPanelController"
	fx:id="textPanel"
	id="textPanel">
	
	<stylesheets>
		<String fx:value="app/background/root.css"/>
		<String fx:value="app/gameScreen/questionPanel/text/QuestionPanel.css"/>
	</stylesheets>
	
	<children>	
		<PointyBackGround 
			fx:id="backGroundPoly"
			width="${textPanel.width}"
			height="${textPanel.height}"/>
		<Label
			fx:id="textLabel"
			pickOnBounds="false"/>
	</children>
</StackPane>

